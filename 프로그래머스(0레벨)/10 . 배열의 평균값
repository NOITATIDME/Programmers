class Solution {
    public double solution(int[] numbers) {
        double answer = 0;
        double average = 0;
        if(numbers.length >= 1 && numbers.length <= 100){
            for(int i = 0; i < numbers.length; i++){
                average += numbers[i];
            }
            average = average / numbers.length;
        }
        answer = average;
        return answer;
    }
}
